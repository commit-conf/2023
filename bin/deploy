#!/bin/bash

set -e

# use a hidden folder, so we do not delete it later
FOLDER=.gh-pages

# if the folder exists, delete it
if [ -d ${FOLDER} ]; then
  rm -rf ${FOLDER}
fi

mkdir ${FOLDER}
cp -r _site/* ${FOLDER}/
git checkout gh-pages
rm -rf *
mv ${FOLDER}/* .

git add -A
git commit -m "$(git log origin/master -1 --pretty=%B)"
git push origin gh-pages

cd ..
echo "Successfully deployed" 