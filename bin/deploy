#!/bin/bash

set -e

FOLDER=.gh-pages

if [ ! -d ${FOLDER} ]; then
  git clone -b gh-pages git@github.com:commit-conf/2023 ${FOLDER}
  cd ${FOLDER}
else
  cd ${FOLDER}
  git pull
fi

rm -rf *
rm -rf .github
cp -R ../_site/* .
git add -A
git commit -m "$(git log origin/master -1 --pretty=%B)"
git push

cd ..
echo "Successfully deployed" 